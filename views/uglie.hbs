<div class="header">
  <div class="nav-button left">
    <span onclick="window.history.back()">
      Back
      </span>
  </div>
  {{#if itsYou}}
  <h1>Your Uglie</h1>
  {{else}}
  <h1>{{uglie._owner.username}}'s Uglie</h1>
  {{/if}}
</div>
<div class="container">
  <a href="/uglie/add">
  </a>
  <div class="card">
    <h2>{{uglie.name}}</h2>
    <img src="/uploads/{{uglie.path}}">
    <p>Likes: {{uglie.likes.length}}</p>
    <p class="id" style="display: none;">{{uglie.id}}</p>
  </div>
  <div class="buttons">
  {{#if itsYou}}
    <div class="button delete">
      Delete
    </div>
  {{else}}
    {{#if liked}}
      <div class="button like liked">&#10003;
        Liked
      </div>
    {{else}}
      <div class="button like">
        Like
      </div>
    {{/if}}
    <a href="/uglie/{{uglie.id}}/trade">
    <div class="button trade">
      Trade
    </div>
    </a>
  {{/if}}
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/js/uglie.js"></script>
