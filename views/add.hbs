<div class="header">
  <h1>Create an Uglie</h1>
</div>
<div class="container">
  <form class="form-add" action="/uglie/add" method="post" enctype="multipart/form-data">
    <input name="name" type="text" value="" class="uglie-name" readonly>
    <input type="file" style="display: none;" class="photo-upload" name="photo" accept="image/*" capture="camera"> <br/>
    <img src="/img/selfie.png" id="file-upload">
    <br/>
    <input id="submit" type="submit" value="Upload Image" name="submit">
  </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/js/names.js"></script>
