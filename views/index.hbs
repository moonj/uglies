<div class="header">
  <div class="nav-button left">
      <span onclick="window.history.back()">
      Back
      </span>
  </div>
  <div class="nav-button right">
    <a href="/logout">
      Log out
    </a>
    </div>
  <h1>
  {{#if isYou}}
    Your Uglies
  {{else}}
    {{user.username}}'s Uglies
  {{/if}}
  </h1>
</div>
<div class="container">
  {{#if isYou}}
  <a href="/uglie/add">
    <div class="camera">
        <img src="/img/camera.png">
    </div>
  </a>
  {{/if}}
  {{#uglies}}
  <a href="/uglie/{{this.id}}">
    <div class="uglie">
      <h2>{{this.name}}</h2>
      <img src="/uploads/{{this.path}}">
      <p>Owned by {{this._owner.username}}</p>
      <p>Created by {{this._creator.username}}</p>
      <p>{{this.likes.length}} Likes</p>
    </div>
  </a>
  {{else}}
    {{#if isYou}}
      <p class="onboard">You don't have any uglies yet! <br/><br/>Tap the camera button below to create your first one.</p>
    {{else}}
      <p class="onboard">Doesn't look like {{user.username}} has any uglies yet :(</p>
    {{/if}}
  {{/uglies}}
</div>
